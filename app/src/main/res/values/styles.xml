<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarSize">56dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/search_view_cursor</item>
    </style>

    <style name="h1" parent="AppTheme">
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="h6" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>bo
    </style>

    <style name="body1" parent="AppTheme">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
